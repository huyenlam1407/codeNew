<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>@ViewBag.Title</title>
    <style>
        .div-top {
            width: 100%;
            height: 50px;
            background-color: black;
            text-align: center;
            color: white;
        }

        h2 {
            text-align: center;
        }

        .div-content {
            width: 100%;
            background-color: white;
            height: auto;
            padding: 30px;
        }

        .div-footer {
            width: 100%;
            height: 200px;
            background-color: black;
            text-align: center;
            color: white;
            clear: both;
            padding: 10px;
        }

        body {
            margin: 0px;
            padding: 0px;
        }

        .menu {
            width: 100%;
            background-color: gray;
            padding: 30px;
            float: left;
        }
    </style>
</head>

<body>
    <div class="div-top">
        <h2 style="padding:10px;">
            TRANG QUẢN LÝ SẢN PHẨM
        </h2>
    </div>
    <div class="menu">
        <nav class="navbar navbar-expand-sm bg-light">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("SanPham","Admin")">Sản Phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("DanhMuc","Admin")">Danh Mục</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("DonHang","Admin")">Đơn Hàng</a>
                    </li>
                </ul>
            </div>
        </nav>


    </div>
    <div class="div-content">
        @RenderBody()

    </div>
    <div class="div-footer">
        Trang Được Quản Lý Bởi Admin
    </div>
</body>
</html>
